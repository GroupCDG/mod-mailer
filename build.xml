<project name="mailer" default="dist" basedir=".">

  <property name="src" location="src"/>
  <property name="build" location="build"/>
  <property name="target" location="target"/>
  <property name="lib" location="lib"/>
  <property name="module-name" value="mailer"/>
  <property name="version" value="0.1"/>
  <property name="module-dir" value="${module-name}-v${version}"/>

  <target name="init">
    <mkdir dir="${build}/${module-dir}"/>
  </target>

  <path id="compile-classpath">
    <fileset dir="${lib}">
      <include name="*.jar"/>
    </fileset>
  </path>

  <target name="compile" depends="init">
    <javac srcdir="${src}" destdir="${build}/${module-dir}" classpathref="compile-classpath" debug="on"
           includeantruntime="false" target="1.7" source="1.7"/>
  </target>

  <target name="dist" depends="compile">
    <mkdir dir="${target}"/>
    <copy file="mod.json" todir="${build}/${module-dir}"/>
    <copy todir="${build}/${module-dir}/lib">
      <fileset dir="${lib}">
        <include name="mail.jar"/>
      </fileset>
    </copy>
    <zip destfile="${target}/mod.zip" basedir="${build}"/>
  </target>

  <target name="clean" description="clean up" >
    <delete dir="${build}"/>
    <delete dir="${target}"/>
  </target>
</project>